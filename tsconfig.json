{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es2017", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "noEmit": true,
    "types": [
      "webpack-env",
      "jest",
      "@testing-library/jest-dom"
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["app/packs/**/*"],
  "exclude": ["**/*.test.{ts,tsx}", "node_modules", "vendor", "public"],
  "compileOnSave": false
}