        <%= image_pack_tag("images/muffi-logo.svg", class: "absolute") %>
        <div class="flex items-center justify-center h-full">
          <%= yield %>
        </div>
      </div>
      <div class="hidden md:w-1/2 md:block md:h-full PlaceholderImage">
      </div>
    </main>
  </body>
