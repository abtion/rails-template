<div class="container mx-auto my-5">
  <h2 class="text-3xl font-bold mt-0 mb-6"><%= t("admin.shared.title") %></h2>
  <h3 class="text-2xl font-bold mb-8"><%= t(".title") %></h3>
  <div class="flex justify-end">
    <%= link_to t("admin.shared.delete"), admin_user_path(@user), method: :delete, data: { confirm: t("admin.shared.delete_confirm") }, class: "Button Button__link Button--lg Button--danger inline-block text-center mr-2" %>
    <%= link_to t("admin.shared.edit"), edit_admin_user_path(@user), class: "Button Button__link Button--lg Button--primary inline-block text-center" %>
  </div>
  <div class="flex flex-col">
    <div class="inline-block mx-auto w-1/2">
      <table class="min-w-full">
        <tbody>
          <tr class="border">
            <td scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">
              <%= User.human_attribute_name("email") %>
            </td>
            <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap">
              <%= @user.email %>
            </td>
          <tr>
          <tr class="border">
            <td scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">
              <%= User.human_attribute_name("name") %>
            </td>
            <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap">
              <%= @user.name %>
            </td>
          <tr>
          <tr class="border">
            <td scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">
              <%= User.human_attribute_name("created_at") %>
            </td>
            <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap">
              <%= I18n.l(@user.created_at, format: :short) %>
            </td>
          <tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
