<div class="container mx-auto my-20 max-w-3xl">
  <div class="flex items-center">
    <h1 class="text-3xl flex-grow"><%= @user.email %></h1>

    <% if policy(User).index? %>
      <%= link_to t("admin.shared.back"), admin_users_path, class: "ButtonClear ButtonClear--md ButtonClear--primary mr-2" %>
    <% end %>
    <% if policy(@user).edit? %>
      <%= link_to t("admin.shared.edit"), edit_admin_user_path(@user), class: "ButtonClear ButtonClear--md ButtonClear--primary mr-2" %>
    <% end %>
    <% if policy(@user).destroy? %>
      <%= link_to t("admin.shared.delete"), admin_user_path(@user), method: :delete, data: { confirm: t("admin.shared.delete_confirm") }, class: "Button Button--md Button--danger" %>
    <% end %>
  </div>

  <div class="overflow-hidden rounded border border-neutral-200 shadow-sm mt-10">
    <table class="min-w-full">
      <tbody>
        <tr class="even:bg-neutral-50 odd:bg-white">
          <th class="text-left text-neutral-500 text-xs uppercase font-medium px-6 py-3">
            <%= User.human_attribute_name("email") %>
          </th>
          <td class="text-sm text-neutral-800 font-medium px-3 py-2 whitespace-nowrap">
            <%= @user.email %>
          </td>
        </tr>

        <tr class="even:bg-neutral-50 odd:bg-white">
          <th class="text-left text-neutral-500 text-xs uppercase font-medium px-6 py-3">
            <%= User.human_attribute_name("name") %>
          </th>
          <td class="text-sm text-neutral-800 font-medium px-3 py-2 whitespace-nowrap">
            <%= @user.name %>
          </td>
        </tr>

        <tr class="even:bg-neutral-50 odd:bg-white">
          <th class="text-left text-neutral-500 text-xs uppercase font-medium px-6 py-3">
            <%= User.human_attribute_name("created_at") %>
          </th>
          <td class="text-sm text-neutral-800 font-medium px-3 py-2 whitespace-nowrap">
            <%= I18n.l(@user.created_at, format: :short) %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
