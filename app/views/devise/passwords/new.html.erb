<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "mx-auto max-w-sm w-full" }) do |f| %>
  <h2 class="text-3xl font-semibold mb-12"><%= t(".forgot_your_password") %></h2>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field mb-6">
    <%= f.label(:email, class: "mb-2 inline-block") %><br>
    <%= f.email_field(:email, autofocus: true, autocomplete: "email", placeholder: true, class: "Input Input--default Input--md block w-full") %>
  </div>

  <div class="actions">
    <%= f.submit(t(".send_me_reset_password_instructions"), class: "Button Button--md Button--primary w-full") %>
  </div>
  <div class="mt-3">
    <small class="text-sm block text-right">
        <%= render "devise/shared/links" %>
    </small>
  </div>
<% end %>
