{
  "environments": {
    "review":{
      "env": {
        "HTTP_AUTH_PASSWORD": {
          "required": true
        },
        "HTTP_AUTH_USERNAME": {
          "required": true
        },
        "SEED_ADMIN_EMAIL": {
          "required": true
        },
        "SEED_ADMIN_INITIAL_PASSWORD": {
          "required": true
        },
        "DOMAIN_NAME": {
          "required": false
        }
      },
      "scripts": {
        "postdeploy": "bundle exec rails db:seed"
      }
    }
  },
  "addons": [
    "rollbar:free",
    {
      "plan": "heroku-postgresql",
      "options": { "version": "12" }
    },
    "heroku-redis:hobby-dev"
  ],
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "heroku/ruby"
    }
  ],
  "env": {
    "MAIL_FROM": {
      "description": "Sender address for emails",
      "required": true
    },
    "DOMAIN_NAME": {
      "description": "The domain for the app. If this has not been decided yet, use <App name>.herokuapp.com",
      "required": true
    }
  },
  "formation": {},
  "name": "project-name-param",
  "scripts": {},
  "stack": "heroku-20"
}
